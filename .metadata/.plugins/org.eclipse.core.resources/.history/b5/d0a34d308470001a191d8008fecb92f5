// Display a string on line 1 using DMA.
void dma_display1(const char *s) {
    // Your code goes here.
	static int index = 0;
	const int size = 34;
	const int cmd1 = 0;
	const int cmd2 = 17;
	const uint16_t padding = 0x220;

	if (index == size){
		index = 0;
	}
	if (index == cmd1 || index == cmd2){
		index += 1;
	}



}

